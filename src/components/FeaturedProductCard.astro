---
export interface FeaturedProductCardProps {
  title: string;
  subtitle: string;
  price: number;
  category: string;
  image: string;
  imageAlt?: string;
}

interface Props extends FeaturedProductCardProps {}

const {
  title,
  subtitle,
  price,
  category,
  image,
  imageAlt = title,
} = Astro.props;

// Format price with "Desde" prefix for featured products
const formattedPrice = new Intl.NumberFormat("es-MX", {
  style: "currency",
  currency: "MXN",
}).format(price);
---

<!-- Featured Product Card Component as clickable link -->
<a
  href="/catalog"
  class="block bg-white border border-gray-200 rounded-lg shadow-sm max-w-sm mx-auto hover:shadow-md hover:scale-105 transition-all duration-300 overflow-hidden focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
>
  <!-- Product Image -->
  <div class="bg-gray-50 flex items-center justify-center">
    <img src={image} alt={imageAlt} class="w-full h-auto" loading="lazy" />
  </div>

  <!-- Product Content -->
  <div class="p-4">
    <!-- Product Title -->
    <h3 class="text-lg font-semibold text-black mb-1 font-sans line-clamp-2">
      {title}
    </h3>

    <!-- Product Subtitle -->
    <p class="text-sm text-gray-600 mb-3 font-sans line-clamp-2">
      {subtitle}
    </p>

    <!-- Product Price with "Desde" prefix -->
    <div class="flex items-center justify-between">
      <span class="text-xl font-bold text-black font-sans">
        Desde {formattedPrice}
      </span>
      <!-- Category Badge -->
      <span
        class="inline-block px-2 py-1 text-xs font-medium font-sans bg-blue-50 text-blue-600 rounded-full"
      >
        {category}
      </span>
    </div>
  </div>
</a>
