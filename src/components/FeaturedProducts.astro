---
import { ArrowRight } from "@lucide/astro";
import FeaturedProductCard from "./FeaturedProductCard.astro";

// Featured products data
const featuredProducts = [
  {
    title: "Proteína en Polvo",
    subtitle: "Proteína de alta calidad para construcción muscular.",
    price: 750,
    category: "Proteína",
    image: "/protein-image.jpg",
    imageAlt: "Proteína en Polvo para construcción muscular",
  },
  {
    title: "Pre Entreno",
    subtitle: "Fórmula avanzada para máximo rendimiento en el entrenamiento.",
    price: 440,
    category: "Pre-Workout",
    image: "/preworkout-image.jpg",
    imageAlt: "Pre Workout para máximo rendimiento.",
  },
  {
    title: "Creatina",
    subtitle: "Creatina monohidratada para fuerza y recuperación muscular.",
    price: 350,
    category: "Creatina",
    image: "/creatine-image.jpg",
    imageAlt: "Creatina Monohidratada para recuperación muscular.",
  },
];
---

<!-- Featured Products Section -->
<section class="bg-gray-100 py-16 sm:py-20 px-4 sm:px-6">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-black mb-4 font-sans">
        Productos destacados
      </h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto font-sans">
        Suplementos populares entre nuestros clientes para maximizar tu
        rendimiento.
      </p>
    </div>

    <!-- Products Grid -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 md:gap-6 mb-12"
    >
      {
        featuredProducts.map((product, index) => (
          <div
            class={`${
              index === 2
                ? "max-w-96 sm:col-span-2 sm:mx-auto sm:max-w-md md:col-span-1 md:mx-0 md:max-w-none"
                : ""
            }`}
          >
            <FeaturedProductCard {...product} />
          </div>
        ))
      }
    </div>

    <!-- Call to Action Button -->
    <div class="text-center">
      <a
        href="/catalog"
        class="inline-flex items-center bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg text-base sm:text-lg transition-all duration-300 hover:bg-blue-700 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 font-sans"
      >
        Ver todos los productos
        <ArrowRight class="ml-2 h-5 w-5" />
      </a>
    </div>
  </div>
</section>
